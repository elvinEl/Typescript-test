{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "outDir": "./dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
